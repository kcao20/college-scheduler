<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CollegeScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/rosé_pine_dawn_text</item>
        <item name="colorPrimary">@color/rosé_pine_dawn_overlay</item>
        <item name="colorPrimaryVariant">@color/rosé_pine_dawn_subtle</item>
        <item name="colorOnPrimary">@color/rosé_pine_dawn_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosé_pine_dawn_iris</item>
        <item name="colorSecondaryVariant">@color/rosé_pine_dawn_foam</item>
        <item name="colorOnSecondary">@color/rosé_pine_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/rosé_pine_dawn_base</item>
    </style>

    <style name="Theme.CollegeScheduler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CollegeScheduler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CollegeScheduler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>