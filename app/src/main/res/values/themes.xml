<resources>

    <style name="Theme.CollegeScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/rosé_pine_dawn_foam</item>
        <item name="colorPrimaryVariant">@color/rosé_pine_dawn_pine</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/rosé_pine_dawn_iris</item>
        <item name="colorSecondaryVariant">@color/rosé_pine_dawn_rose</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:colorBackground">@color/rosé_pine_dawn_base</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorSurface">@color/rosé_pine_dawn_surface</item>
        <item name="colorError">@color/rosé_pine_dawn_love</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.CollegeScheduler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CollegeScheduler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CollegeScheduler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>