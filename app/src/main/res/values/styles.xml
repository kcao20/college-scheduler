<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/lavender</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBar</item>
    </style>

    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lavender</item>
    </style>

    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lavender</item>
    </style>

    <style name="CustomButtonBar" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:backgroundTint">@color/lavender</item>
    </style>

</resources>